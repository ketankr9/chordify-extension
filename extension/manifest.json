{

  "manifest_version": 2,
  "name": "Chordify",
  "description": "Chordify",
  "version": "0.2b",
  "applications": {
    "gecko": {
      "strict_min_version": "57.0"
    }
  },

  "background": {
    "scripts": ["background.js"]
  },

  "content_scripts": [
    {
      "matches": ["*://*.chordify.net/*"],
      "js": ["contentScript.js"]
    }
  ],

  "permissions": [
    "webRequest",
     "*://*.youtube.com/*"
  ],

  "web_accessible_resources": [
    "chords/*.png"
  ],

  "icons": {
    "16": "icons/page-16.png",
    "32": "icons/page-32.png",
    "48": "icons/page-48.png"
  }
}
